<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="by.pazuk1985.SimpleFlashlight">

    <uses-permission android:name="android.permission.CAMERA" /> <!-- Вот эти 2 разрешения необходимо прописать.. -->
    <uses-feature android:name="android.hardware.camera" />      <!-- ..для того чтобы приложение получило доступ к камере -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="by.pazuk1985.SimpleFlashlight.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
    </application>
</manifest>
